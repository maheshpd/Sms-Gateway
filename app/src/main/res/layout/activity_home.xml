<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/connection_txt"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Today Total Connection = 3"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/collection_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Today Total Collection = 300"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collection_txt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/new_customer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="New Customer"
                android:layout_height="80dp" />
            <Button
                android:id="@+id/view_customer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="view customer"
                android:layout_height="80dp" />
            <Button
                android:id="@+id/active_customer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="active customer"
                android:layout_height="80dp" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/deactive_customer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Deactive Customer"
                android:layout_height="80dp" />
            <Button
                android:id="@+id/pay_bill"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Pay Bill"
                android:layout_height="80dp" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Genrate bill"
                android:layout_height="80dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Customer History"
                android:layout_height="80dp" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="view customer"
                android:layout_height="80dp" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="active customer"
                android:layout_height="80dp" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
