<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/connection_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Today Total Connection = 3"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/collection_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connection_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Today Total Collection = 300"
            android:textSize="19sp" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collection_txt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
